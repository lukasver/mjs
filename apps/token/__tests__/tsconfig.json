{
	"$schema": "https://json.schemastore.org/tsconfig",
	"ts-node": {
		// these options are overrides used only by ts-node
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"compilerOptions": {
		"strictNullChecks": true,
		"esModuleInterop": true,
		"baseUrl": "../../", // This must be specified if "paths" is.
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	}
}
