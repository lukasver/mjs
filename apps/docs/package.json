{
	"name": "@mjs/docs",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "pnpm run build-deps && next dev --port 3000",
		"build": "pnpm run build-deps && next build",
		"start": "next start",
		"lint": "next lint --max-warnings 0",
		"check-types": "tsc --noEmit",
		"postbuild": "pagefind --site .next/server/app --output-path public/_pagefind",
		"build-deps": "turbo run build --filter @mjs/i18n && pnpm run generate",
		"generate": "tsx lib/remote-page-map.ts && tsx scripts/ensureStructure.ts && tsx scripts/cleanup-mdx.ts",
		"clean": "rm -rf node_modules .turbo/.cache .next"
	},
	"dependencies": {
		"@mjs/i18n": "workspace:*",
		"@mjs/ui": "workspace:*",
		"@tailwindcss/postcss": "^4.1.10",
		"@vercel/analytics": "^1.5.0",
		"@vercel/og": "^0.6.8",
		"image-size": "^2.0.2",
		"mime-types": "^2.1.35",
		"next": "15.3.2",
		"nextra": "^4.2.17",
		"nextra-theme-docs": "^4.2.17",
		"posthog-js": "^1.248.0",
		"react": "19.1.0",
		"react-dom": "^19.1.0",
		"rtl-detect": "^1.1.2",
		"sharp": "^0.34.2"
	},
	"devDependencies": {
		"@ai-sdk/google": "^1.2.19",
		"@mjs/utils": "workspace:*",
		"@mjs/tailwind-config": "workspace:*",
		"@mjs/typescript-config": "workspace:*",
		"@next/eslint-plugin-next": "^15.3.0",
		"@types/mime-types": "^2.1.4",
		"@types/node": "^22.15.3",
		"@types/react": "19.1.5",
		"@types/react-dom": "^19.1.0",
		"@types/rtl-detect": "^1.0.3",
		"ai": "^4.3.16",
		"dotenv": "^16.5.0",
		"handlebars": "^4.7.8",
		"pagefind": "^1.3.0",
		"server-only": "^0.0.1",
		"tsx": "^4.20.3",
		"typescript": "5.8.3"
	}
}
